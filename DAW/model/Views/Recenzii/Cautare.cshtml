<h2>Cauta o recenzie</h2>

 <form asp-action="CautaFilm"  asp-controller="Recenzii" method="get">

<div class="form-group">
    <div class="col-md-9">
          <label >Numele filmului</label>
          <input name="numeFilm" class="form-control"/>
    </div>
</div>

<div class="form-group">

    <div class="col-md-9">
        <label >Nota filmului</label>
        <select name="Nota">
            <option></option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
    </div>
</div>

     <div class="form-group">
         <div class="col-md-10 col-md-offset-2">
             <input type="submit" value="Cauta" class="btn btn-primary" />
         </div>
     </div>
     
</form>
